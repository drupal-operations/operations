<?php

/**
 * @file
 * Install, update and uninstall functions for the Site Manager module.
 */

/**
 * Implements hook_install().
 */
function site_manager_install() {
  \Drupal::messenger()->addStatus('Site Manager has been installed.');
}

/**
 * Implements hook_uninstall().
 */
function site_manager_uninstall() {
  \Drupal::messenger()->addStatus('Site Manager has been un-installed.');
}
